{
  "manifest_version": 3,

  "name": "__MSG_extensionName__",
  "short_name": "__MSG_extensionShortName__",
  "description": "__MSG_extensionDescription__",
  "author": "Brett Zamir",
  "version": "0.4.0",
  "homepage_url": "https://github.com/brettz9/bahai-reference-library-wiki-overlay",

  "permissions": ["contextMenus", "*://reference.bahai.org/*"],

  "content_scripts": [
    {
      "matches": ["*://bahai.org/library/*"],
      "run_at": "document_end",
      "js": [
          "data/wiki-overlay.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "data/utils.js",
    "data/Writings-map.js",
    "data/Writings-behavior-map.js"
  ],

  "background": {
    "service_worker": "/lib/background.js"
  },

  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },

  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "jid0-ySOiEX15dyVpuWRhvsrdHdR04w0@jetpack",
      "strict_min_version": "58.0.2"
    }
  }
}
